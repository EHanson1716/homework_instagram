<h1>Edit an existing photo</h1>

<form action="http://localhost:3000/update_photo/<%= params[:id] %>">
  <div>
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" type="text" name="the_caption" value="<%= @updated_row.caption %>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="the_source" value="<%= @updated_row.source %>">
  </div>
  <div>
    <input type="submit" value="Update photo">
  </div>
</form>
